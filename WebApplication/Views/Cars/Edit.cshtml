@model WebApplication.Models.Car

<h2>Редагувати автомобіль</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Модель</label>
        <input asp-for="Model" class="form-control" />
    </div>
    <div class="form-group">
        <label>Колір</label>
        <input asp-for="Color" class="form-control" />
    </div>
    <div class="form-group">
        <label>Рік</label>
        <input asp-for="Year" class="form-control" />
    </div>
    <div class="form-group">
        <label>Тип кузова</label>
        <input asp-for="BodyType" class="form-control" />
    </div>
    <div class="form-group">
        <label>Картинка</label><br />
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" width="150" />
        }
        <input type="file" name="imageFile" class="form-control" />
    </div>
    <button type="submit" class="btn btn-warning">
        <i class="fa fa-save"></i> Оновити
    </button>
    <div class="form-group">
        <label>Поточне зображення</label><br />
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" width="150" class="img-thumbnail" />
        }
        else
        {
            <p>Зображення відсутнє</p>
        }
    </div>

    <div class="form-group">
        <label asp-for="ImageFile"></label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Зберегти</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}