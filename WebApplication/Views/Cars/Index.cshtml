@model IEnumerable<WebApplication.Models.Car>

@{
    ViewData["Title"] = "Список авто";
}

<h1>Список авто</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Додати авто
    </a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Модель</th>
            <th>Колір</th>
            <th>Рік</th>
            <th>Тип кузова</th>
            <th>Фото</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Model</td>
                <td>@item.Color</td>
                <td>@item.Year</td>
                <td>@item.BodyType</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@Url.Content(item.ImagePath)" alt="car image" width="100" />
                    }
                    else
                    {
                        <span class="text-muted">нема фото</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
